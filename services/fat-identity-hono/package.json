{
	"name": "@repo/fat-identity-hono",
	"type": "module",
	"version": "1.0.0",
	"scripts": {
		"dev:server": "tsx watch src/index.ts",
		"dev:swagger-ui": "browser-sync start --proxy 'localhost:2204' --files 'src/**/*.ts'",
		"dev:old": "pnpm run '/dev:server|dev:swagger-ui/'",
		"dev": "vite",
		"start": "vite",
		"build:server": "vite build",
		"build:client": "tsup",
		"build": "pnpm run '/build:server|build:client/'",
		"serve": "node dist/index.js",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf node_modules",
		"emulator": "firebase emulators:start --only firestore,auth --project fat-core-dev",
		"test:integration": "vitest --config test-config/vitest.integration.config.ts --ui",
		"test:e2e:no-emulator": "vitest --config test-config/vitest.e2e.config.ts --ui",
		"test:e2e": "firebase emulators:exec --only firestore,auth --project fat-core-dev 'pnpm test:e2e:no-emulator'",
		"test:no-emulator": "vitest --config test-config/vitest.config.ts --ui",
		"test": "firebase emulators:exec --only firestore,auth --project fat-core-dev 'pnpm test:no-emulator'",
		"changeset": "pnpm -w changeset"
	},
	"tsup": {
		"entry": [
			"src/client.ts"
		],
		"dts": true
	},
	"dependencies": {
		"@hono/node-server": "^1.13.1",
		"@hono/swagger-ui": "^0.4.1",
		"@hono/zod-openapi": "^0.16.4",
		"@scalar/hono-api-reference": "^0.5.153",
		"firebase-admin": "^12.0.0",
		"hono": "^4.6.3",
		"pino": "^9.4.0",
		"radashi": "12.2.0-beta.af825f4",
		"ts-pattern": "^5.4.0",
		"zod": "^3.23.4"
	},
	"devDependencies": {
		"@asteasolutions/zod-to-openapi": "^7.2.0",
		"@hono/vite-build": "^1.1.0",
		"@hono/vite-dev-server": "^0.16.0",
		"@hono/zod-validator": "^0.4.0",
		"@julr/vite-plugin-validate-env": "^1.1.1",
		"@types/node": "^20.11.17",
		"@vitest/ui": "2.1.2",
		"browser-sync": "^3.0.3",
		"dotenv": "^16.4.5",
		"pino-pretty": "^11.2.2",
		"tsup": "^8.3.0",
		"tsx": "^4.7.1",
		"type-fest": "^4.26.1",
		"vite": "^5.4.8",
		"vite-plugin-env-compatible": "^2.0.1",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "^2.0.0"
	},
	"exports": {
		"types": "./dist/client.d.ts",
		"import": "./dist/client.cjs"
	}
}
