{
  "compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
		"paths": {
			"~/*": ["./src/*"],
			"~": ["./src"]
		},
	},
	"include": ["src/client.ts", "src/vite-env.d.ts", "src/hono-env.d.ts"],
}
