{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"paths": {
			"~/*": ["./src/*"],
			"~": ["./src"]
		},
		"rootDir": "./src",
	},
	"include": ["src/client.ts", "src/vite-env.d.ts", "src/hono-env.d.ts"]
}
