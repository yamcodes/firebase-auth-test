{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"~/*": ["./src/*"],
			"~": ["./src"]
		},
	},
}
